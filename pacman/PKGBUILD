pkgname=asimov-cli
pkgver=25.0.0_dev.2
pkgrel=1
pkgdesc="Asimov CLI Tool"
arch=('x86_64' 'aarch64')
url="https://github.com/asimov-platform/asimov-cli"
license=('MIT')
depends=()

# Use the correct release assets
source_x86_64=("https://github.com/asimov-platform/asimov-cli/releases/download/25.0.0-dev.2/asimov-linux-x86.gz")
source_aarch64=("https://github.com/asimov-platform/asimov-cli/releases/download/25.0.0-dev.2/asimov-linux-arm.gz")

sha256sums_x86_64=("a64251f846d0cc0280a7f83f25f0db0c4f15ef4caf349ccd45dad22250866060")
sha256sums_aarch64=("e9ca2393fe6147a01f10a36bd162b8f014fcfc1e964bb65a33e6d0920b34960d")

package() {
    cd "$srcdir"

    # Determine correct filename based on architecture
    if [[ "$CARCH" == "x86_64" ]]; then
        source_file="asimov-linux-x86.gz"
        expected_sha="a64251f846d0cc0280a7f83f25f0db0c4f15ef4caf349ccd45dad22250866060"
        expected_arch="x86-64"
    elif [[ "$CARCH" == "aarch64" ]]; then
        source_file="asimov-linux-arm.gz"
        expected_sha="e9ca2393fe6147a01f10a36bd162b8f014fcfc1e964bb65a33e6d0920b34960d"
        expected_arch="ARM aarch64"
    else
        echo "âŒ Error: Unsupported architecture $CARCH"
        exit 1
    fi

    echo "ğŸ“‚ Contents of $srcdir before extraction:"
    ls -lah "$srcdir"

    # âœ… Verify file exists
    if [[ ! -f "$source_file" ]]; then
        echo "âŒ Error: Expected file $source_file not found!"
        exit 1
    fi

    # âœ… Verify SHA-256 checksum
    actual_sha=$(sha256sum "$source_file" | awk '{print $1}')
    echo "ğŸ” Expected SHA: $expected_sha"
    echo "ğŸ” Actual SHA: $actual_sha"

    if [[ "$actual_sha" != "$expected_sha" ]]; then
        echo "âŒ Error: Checksum mismatch! Expected $expected_sha but got $actual_sha."
        exit 1
    fi

    # âœ… Extract the file
    echo "ğŸ“¦ Extracting $source_file..."
    gunzip -f "$source_file"
    extracted_file="${source_file%.gz}"

    # âœ… Verify extracted file exists
    if [[ ! -f "$extracted_file" ]]; then
        echo "âŒ Error: Extraction failed! Expected file $extracted_file not found."
        exit 1
    fi

    # âœ… Check binary format
    echo "ğŸ›  Checking extracted file format: $extracted_file"
    file "$extracted_file"

    # âœ… Verify architecture
    actual_arch=$(file "$extracted_file" | grep -oE 'x86-64|ARM aarch64')
    echo "ğŸ” Expected architecture: $expected_arch"
    echo "ğŸ” Actual architecture: $actual_arch"

    if [[ "$actual_arch" != "$expected_arch" ]]; then
        echo "âŒ Error: Extracted binary ($actual_arch) does not match expected architecture ($expected_arch)!"
        exit 1
    fi

    # âœ… Ensure binary is executable
    chmod +x "$extracted_file"

    # âœ… Run a basic check to see if the binary executes
    echo "ğŸš€ Running extracted binary for verification..."
    "$extracted_file" --help || echo "âŒ Binary execution failed!"

    # âœ… Install into /usr/bin/
    echo "ğŸ“‚ Installing $extracted_file to /usr/bin/asimov..."
    install -Dm755 "$extracted_file" "$pkgdir/usr/bin/asimov"
}
